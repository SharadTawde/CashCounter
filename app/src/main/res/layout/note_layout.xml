<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#332D2D2D" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20sp"
        android:layout_toStartOf="@+id/noteValue"
        android:fontFamily="@font/raleway_medium"
        android:text="x"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/noteValue"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/note_box"
        android:fontFamily="@font/raleway_medium"
        android:hint="0"
        android:inputType="number"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@+id/noteValue"
        android:fontFamily="@font/raleway_medium"
        android:text="="
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/noteAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/equal"
        android:ellipsize="marquee"
        android:fontFamily="@font/raleway_medium"
        android:singleLine="true"
        android:text="0/-"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

</RelativeLayout>